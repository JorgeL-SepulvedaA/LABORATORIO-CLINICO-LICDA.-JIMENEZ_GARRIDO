
@{
    ViewBag.Title = "Log In";
}

<br />
<br />
<br />

<fieldset>
    <legend align="center">→ INICIAR SESIÓN ←</legend>
    <div class="container" id="LogIn_Form" style="align-content: center;">
        <img src="https://us.123rf.com/450wm/serkorkin/serkorkin1601/serkorkin160100015/50830514-cruz-m%C3%A9dica-y-hojas-verdes-concepto-de-ilustraci%C3%B3n-vectorial-medicina-cuidado-de-la-salud-naturaleza.jpg?ver=6" class="img-circle" align="left" /> <br />
        
        <br />
        <form action="/Home/Interfaces" method="post" enctype="multipart/form-data" id="Form_LogIn" align="right">
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="email">Nombre de usuario o correo</label>
                <input type="text" class="form-control text-italic" id="email" name="email" aria-describedby="emailHelp" placeholder="Nombre de usuario aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control text-italic" id="password" name="password" placeholder="Contraseña aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <input type="submit" class="btn btn-outline-success btn-primary" value="Entrar" />
            </div>
        </form>
    </div>
</fieldset>