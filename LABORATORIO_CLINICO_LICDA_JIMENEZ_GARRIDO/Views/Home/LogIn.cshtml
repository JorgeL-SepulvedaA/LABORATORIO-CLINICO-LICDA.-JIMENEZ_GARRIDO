
@{
    ViewBag.Title = "Log In";
}

<h2>Log In</h2>

<div class="container" id="LogIn_Form">
    <label class="text-center text-uppercase text-danger" > [AGREGAR LA IMAGEN] </label>
    <form action="/Home/Interfaces" method="post" id="Form_LogIn" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">Nombre de usuario</label>
            <input type="text" class="form-control text-italic" id="email" name="email" aria-describedby="emailHelp" placeholder="Nombre de usuario aquí" required>
            <small id="emailHelp" class="form-text text-muted text-info">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control text-italic" id="password" name="password" placeholder="Contraseña aquí" required>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="check">
            <label class="form-check-label" for="check">Check me out</label>
        </div>
        <button type="submit" class="btn btn-outline-success btn-primary">Submit</button>
    </form>
</div>