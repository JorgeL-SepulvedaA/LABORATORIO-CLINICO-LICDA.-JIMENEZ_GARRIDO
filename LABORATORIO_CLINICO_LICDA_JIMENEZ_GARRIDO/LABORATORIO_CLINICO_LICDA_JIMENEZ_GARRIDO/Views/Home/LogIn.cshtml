
@{
    ViewBag.Title = "Log In";
}
<fieldset>
    <legend align="center">→ INICIAR SESIÓN ←</legend>
    <div class="container" id="LogIn_Form" style="">
        <label class="text-center"><img src="" class="img-circle" /></label>
        <form action="/Home/Interfaces" method="post" id="Form_LogIn" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">Nombre de usuario o correo</label>
                <input type="text" class="form-control text-italic" id="email" name="email" aria-describedby="emailHelp" placeholder="Nombre de usuario aquí" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control text-italic" id="password" name="password" placeholder="Contraseña aquí" required>
            </div>
            <button type="submit" class="btn btn-outline-success btn-primary">Submit</button>
        </form>
    </div>
</fieldset>